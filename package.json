{
  "name": "zenith",
  "version": "1.0.0",
  "description": "Internet Cafe Management System",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently -k \"cross-env BROWSER=none npm run dev:vite\" \"wait-on tcp:9002 && npm run dev:electron\"",
    "dev:vite": "cross-env NODE_ENV=development vite --host --port 9002 --mode development",
    "dev:electron": "cross-env NODE_ENV=development wait-on tcp:9002 && vite build --config vite.preload.config.ts && electron .",
    "build": "npm run build:vite && npm run build:electron && npm run build:main",
    "build:vite": "vite build",
    "build:electron": "vite build --config vite.preload.config.ts",
    "build:main": "tsc -p tsconfig.electron.json",
    "preview": "vite preview",
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "dist": "npm run build && npm run build:mac"
  },
  "build": {
    "appId": "com.zenith.cafe",
    "productName": "Zenith",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "public/**/*",
      "build/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/logo.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "executableName": "Zenith",
      "extendInfo": {
        "LSApplicationCategoryType": "public.app-category.productivity",
        "CFBundlePackageType": "APPL",
        "CFBundleDisplayName": "Zenith"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-alert-dialog": "^1.1.5",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.5",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.5",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-select": "^2.1.5",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.3",
    "@supabase/supabase-js": "^2.48.1",
    "@tanstack/react-table": "^8.20.6",
    "dotenv": "^16.4.7",
    "framer-motion": "^12.4.3",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.3",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-confetti": "^6.2.2",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.54.2",
    "react-i18next": "^15.4.0",
    "react-router-dom": "^6.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^1.7.4",
    "systeminformation": "^5.25.11",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@radix-ui/react-dialog": "latest",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-toast": "latest",
    "@types/node": "^20.17.16",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "electron": "latest",
    "electron-builder": "^24.13.3",
    "lucide-react": "^0.474.0",
    "postcss": "^8.5.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "latest",
    "typescript": "^5.7.3",
    "vite": "^4.5.9",
    "wait-on": "^8.0.2",
    "zod": "^3.24.1",
    "zustand": "latest"
  }
}
